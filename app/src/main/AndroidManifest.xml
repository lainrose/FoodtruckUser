<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="foodtruckuser.randombox.sweng.cbnu.com.foodtruckuser">

    <!-- 퍼미션 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 액티비티 -->
        <activity
            android:name=".ui.main.FragmentMain"
            android:hardwareAccelerated="true"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".ui.SubMain.FragmentSubMain"
            android:supportsRtl="true"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.join.JoinMain" />
        <activity android:name=".ui.join.sign.SigninActivity" />
        <activity android:name=".ui.join.sign.SignupActivity" />

        <!-- 페이스북 메타 데이터들 -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!-- 구글 메타 데이터들 -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDUM8HXq1k8LcGCSaDPlf0pGT5EbUsQK4M" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".ui.SubMain.AcitivityTruckDetail" />
        <activity android:name=".ui.SubMain.AcitivityTruckMenu"></activity>
    </application>

</manifest>