<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/writingbackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="리뷰 쓰기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:id="@+id/writingView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            card_view:cardCornerRadius="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#FFFFFF">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="16dp"
                                    android:orientation="vertical"
                                    android:background="#FFFFFF">

                                    <RelativeLayout
                                        android:id="@+id/uproadPhotoBtn"
                                        android:layout_width="300dp"
                                        android:layout_height="300dp"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:background="#cccccc"
                                        android:onClick="onClick">
                                        <ImageView
                                            android:id="@+id/uproadPhotoImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                        <ImageView
                                            android:id="@+id/uproadPhoto"
                                            android:layout_width="48dp"
                                            android:layout_height="match_parent"
                                            android:background="#cccccc"
                                            android:src="@drawable/ico_circle_camera_orange"
                                            android:textColor="#222222"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:hint=" 행사의 내용을 간략하게 적어주세요."
                                            android:textColorHint="#aaaaaa"
                                            android:id="@+id/writingText"
                                            android:textSize="13dp"
                                            android:textColor="#000000"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentStart="true" />
                                    </RelativeLayout>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:alpha="0.12"
                                        android:background="@android:color/black" />
                                    <EditText android:textColor="#ff333333"
                                        android:textColorHint="#ffaaaaaa"
                                        android:id="@+id/inputDate"
                                        android:background="#ffffffff"
                                        android:paddingLeft="20.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="48.0dip"
                                        android:hint="행사날짜를 입력해 주세요"
                                        android:singleLine="true"
                                        android:layout_centerHorizontal="true"
                                        android:inputType="text"
                                        android:imeOptions="actionNext">
                                        <requestFocus />
                                    </EditText>
                                    <EditText android:textColor="#ff333333"
                                        android:textColorHint="#ffaaaaaa"
                                        android:id="@+id/inputLocation"
                                        android:background="#ffffffff"
                                        android:paddingLeft="20.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="48.0dip"
                                        android:hint="행사장소를 입력해 주세요"
                                        android:singleLine="true"
                                        android:layout_centerHorizontal="true"
                                        android:inputType="text"
                                        android:imeOptions="actionNext">
                                        <requestFocus />
                                    </EditText>
                                    <EditText android:textColor="#ff333333"
                                        android:textColorHint="#ffaaaaaa"
                                        android:id="@+id/numOfTruck"
                                        android:background="#ffffffff"
                                        android:paddingLeft="20.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="48.0dip"
                                        android:hint="원하는 푸드트럭의 대수를  입력해주세요"
                                        android:singleLine="true"
                                        android:layout_centerHorizontal="true"
                                        android:inputType="number"
                                        android:imeOptions="actionNext">
                                        <requestFocus />
                                    </EditText>
                                    <EditText android:textColor="#ff333333"
                                        android:textColorHint="#ffaaaaaa"
                                        android:id="@+id/rcruitingPeriod"
                                        android:background="#ffffffff"
                                        android:paddingLeft="20.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="48.0dip"
                                        android:hint="모집기간을 입력해 주세요"
                                        android:singleLine="true"
                                        android:layout_centerHorizontal="true"
                                        android:inputType="date|datetime"
                                        android:imeOptions="actionNext">
                                        <requestFocus />
                                    </EditText>
                                    <EditText android:textColor="#ff333333"
                                        android:textColorHint="#ffaaaaaa"
                                        android:id="@+id/isElectric"
                                        android:background="#ffffffff"
                                        android:paddingLeft="20.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="48.0dip"
                                        android:hint="전기지원 가능여부를 입력해주세요."
                                        android:singleLine="true"
                                        android:layout_centerHorizontal="true"
                                        android:inputType="date|datetime"
                                        android:imeOptions="actionNext">
                                    </EditText>
                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="행사 올리기"
                                        android:textSize="@dimen/text_size"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textStyle="bold"
                                        android:background="@drawable/button_shape"
                                        android:id="@+id/uproadFestiveBtn"
                                        android:onClick="onClick"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/floatingbutton"/>
    </LinearLayout>


